<div class="container">
  <br>
  <%= link_to "Create a New post", new_post_path, class:"btn btn-primary" %>
  <br>
  <br>
  <% @posts.each do |post| %>
    <div class="row">
      <!-- Blog post Content Column -->
      <div class="col-lg-8">
        <!-- Blog post -->
        <!-- Title -->
        <h1><%= post.title %></h1>
        <!-- Author -->
        <p class="lead">
            by <a href="#"><%= post.user.name %></a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> <%= post.created_at %></p>
        <hr>
        <!-- Preview Image -->
        <img class="img-responsive" src="<%= post.img %>">
        <hr>
        <!-- post Content -->
        <p class="lead"><%= post.content %></p>
        <hr>
        <!-- Blog Comments -->
      </div>
    </div>
  <% end %>
  <!-- /.row -->
  <hr>
  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12">
        <p>Copyright &copy; Ada's Garden 2014</p>
      </div>
    </div>
    <!-- /.row -->
  </footer>
  <!-- jQuery -->
  <script src="js/jquery.js"></script>
  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
  <br>
  <br>
</div>
