<h2>Hello, <%= @user.name %></h2>

<% if flash[:notice] %>
  <div class="center"> <%= flash[:notice] %> </div>
<% end %>

<%= bootstrap_form_for(@user) do |f| %>
  <div id="edit-name">
    <%= f.text_field :name %>
  </div>
  <div id="edit-email">
    <% if @user.email %>
      <% unless @user.confirmed %>
        Email Unconfirmed
      <% end %>
      <%= f.email_field :email %>
    <% else %>
      <%= f.email_field :email, placeholder: "Add your email to get updates about garden events and news!" %>
    <% end %>
    <% if @user.admin == nil %>
      Your admin request has been received and will be evaluated by a current admin.

    <% elsif @user.admin == false %>
      <%= f.check_box :admin, label: "Request admin status" %>
    <% end %>
  </div>
    <%= f.submit class: "btn btn-default", value: "Update Account"%>
<% end %>


<%= link_to "Delete Your Account", @user, method: :delete, class: "btn btn-default" %>

<% if @user.admin %>
  <hr>
  <%= link_to "Add a tool", tools_path %><br>
  <%= link_to "Write a post", new_post_path %><br>
  <%= link_to "Schedule an event", events_path %><br>
  <hr>
  <% if @users.length > 0 %>
    Admin candidates:
    <% @users.each do |user| %>
      <%= user.name %> <%= link_to "Make admin", adminify_path(user.id), class: "btn btn-default" %><br>
    <% end %>
  <% end %>
<% end %>
